.search-layout
    flex-grow 1
    display flex
    flex-direction column
    height 100%
    overflow-y auto
    border-radius 16px
    background #fff
    
    .noResults,
    .loading,
    .error
      height:  90%
      align-content center
      align-items center
      bottom 50%

.back-button
    display flex
    align-content left
    align-items center

        
.search-result-content-header
  display flex
  align-items center
  padding 16px 24px
  gap 16px

.search-result-content-body
  flex-grow 1
